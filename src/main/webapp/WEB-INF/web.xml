<?xml version="1.0" encoding="UTF-8"?>

<web-app
        version="3.0"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Fabflix</display-name>
    <description>
      Fabflix is a website for browsing and purchasing movies
    </description>


  <!-- Primary Servlets -->


  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>Search</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>


<!-- Primary JSPs -->


  <servlet>
    <servlet-name>HomeJSP</servlet-name>
    <jsp-file>/home.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeJSP</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>


<!-- Included Servlets and JSPs -->


  <servlet>
    <servlet-name>MovieListJSP</servlet-name>
    <jsp-file>/movie-list.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>MovieListJSP</servlet-name>
    <url-pattern>/movie-list</url-pattern>
  </servlet-mapping>


<!-- Filter Servlets -->




<!-- Other Declarations -->


  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>

  <!--
  <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/err404.jsp</code>
  </error-page>
   -->


</web-app>