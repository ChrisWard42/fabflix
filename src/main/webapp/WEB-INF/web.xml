<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Fabflix</display-name>
    <description>
      Fabflix is a website for browsing and purchasing movies
    </description>


  <!-- Primary Servlets -->


  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>fabflix.core.Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>fabflix.core.Home</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home/*</url-pattern>
    <url-pattern></url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>fabflix.core.Search</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/search/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>BrowseServlet</servlet-name>
    <servlet-class>fabflix.core.Browse</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BrowseServlet</servlet-name>
    <url-pattern>/browse/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>MovieListServlet</servlet-name>
    <servlet-class>fabflix.core.MovieList</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MovieListServlet</servlet-name>
    <url-pattern>/movie-list/*</url-pattern>
  </servlet-mapping>


<!-- Primary JSPs -->



<!-- Filter Servlets -->


  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>fabflix.filters.Authentication</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/</url-pattern>
    <url-pattern>/home/*</url-pattern>
    <url-pattern>/browse/*</url-pattern>
    <url-pattern>/login/*</url-pattern>
    <url-pattern>/search/*</url-pattern>
    <url-pattern>/movie-list/*</url-pattern>
  </filter-mapping>


<!-- Other Declarations -->

